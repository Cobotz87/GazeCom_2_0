<UserControl x:Class="GazeCom_2_0.Panels.Basic.BasicSelfExpression3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GazeCom_2_0.Panels.Basic"
             xmlns:wpf="clr-namespace:Tobii.Interaction.Wpf;assembly=Tobii.Interaction.Net"
             mc:Ignorable="d" 
             Background="White">
    <Grid>

        <Grid x:Name="MainLayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="Btn1" Grid.Row="0" Content="I Like That" FontSize="80" wpf:Behaviors.Activated="Btn1_OnActivated"  Style="{DynamicResource GazeActivatableButton1}"/>
            <Button x:Name="Btn2" Grid.Row="1" Content="I Dont like That" FontSize="80" wpf:Behaviors.Activated="Btn2_OnActivated"  Style="{DynamicResource GazeActivatableButton1}"/>
            <Button x:Name="Btn3" Grid.Row="2" Content="It Doesn't Matter" FontSize="80" wpf:Behaviors.Activated="Btn3_OnActivated"  Style="{DynamicResource GazeActivatableButton1}"/>
        </Grid>

    </Grid>
</UserControl>
